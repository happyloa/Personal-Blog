<section class="bg-slate-950 pb-16">
  <div class="max-w-3xl mx-auto px-6 pt-14">
    <div class="flex flex-col gap-3 mb-8">
      <h1 class="text-3xl md:text-4xl font-bold text-slate-50 leading-tight"><%= page.title %></h1>
      <p class="text-sm text-slate-400 flex flex-wrap items-center gap-2">
        <time datetime="<%= date_xml(page.date) %>"><%= date(page.date) %></time>
        <% if (page.categories && page.categories.length){ %>
          Â· <%= page.categories.map(function(cat){ return cat.name; }).join(', ') %>
        <% } %>
      </p>
      <% if (page.tags && page.tags.length){ %>
        <div class="flex flex-wrap gap-2">
          <% page.tags.forEach(function(tag){ %>
            <a class="px-3 py-1 rounded-full bg-slate-900 border border-slate-800 text-xs uppercase tracking-wide text-slate-300" href="<%- url_for(tag.path) %>">#<%= tag.name %></a>
          <% }) %>
        </div>
      <% } %>
    </div>
    <article class="prose prose-invert prose-lg max-w-none prose-a:text-cyan-300 prose-strong:text-slate-50 prose-blockquote:border-cyan-500/70 prose-blockquote:text-slate-200">
      <%- page.content %>
    </article>
  </div>
</section>
