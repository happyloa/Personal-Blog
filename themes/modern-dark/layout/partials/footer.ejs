<footer class="border-t border-slate-800 bg-slate-900/80">
  <div class="max-w-5xl mx-auto px-6 py-10 flex flex-col md:flex-row md:items-center md:justify-between gap-6">
    <div>
      <p class="text-lg font-semibold text-cyan-200"><%= theme.logo_text || config.title %></p>
      <p class="text-sm text-slate-400">&copy; <%= new Date().getFullYear() %> <%= config.author %>. All rights reserved.</p>
    </div>
    <div class="flex items-center gap-3 text-sm">
      <% (theme.social || []).forEach(function(item){ %>
        <a class="px-3 py-2 rounded-lg bg-slate-800 text-slate-200 hover:bg-cyan-600 hover:text-slate-50 transition" href="<%- url_for(item.url) %>" target="_blank" rel="noopener"><%= item.name %></a>
      <% }) %>
    </div>
  </div>
</footer>
