<header class="backdrop-blur bg-slate-900/70 border-b border-slate-800 sticky top-0 z-30">
  <div class="max-w-5xl mx-auto px-6 py-4 flex items-center justify-between">
    <a href="<%- url_for('/') %>" class="font-semibold tracking-tight text-lg text-cyan-300 hover:text-cyan-200 transition">
      <%= theme.logo_text || config.title %>
    </a>
    <nav class="flex items-center gap-3 text-sm font-medium">
      <% Object.keys(theme.menu || {}).forEach(function(label){ %>
        <a class="px-3 py-2 rounded-lg text-slate-200 hover:text-cyan-200 hover:bg-slate-800 transition" href="<%- url_for(theme.menu[label]) %>"><%= label %></a>
      <% }) %>
    </nav>
  </div>
</header>
