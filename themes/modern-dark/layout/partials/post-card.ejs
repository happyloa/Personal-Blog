<article class="bg-slate-900/70 border border-slate-800 rounded-xl p-6 flex flex-col gap-3 shadow-lg shadow-slate-900/30 hover:border-cyan-500/60 transition">
  <a href="<%- url_for(post.path) %>" class="group">
    <h2 class="text-xl font-semibold text-slate-50 group-hover:text-cyan-200 transition"><%= post.title %></h2>
  </a>
  <p class="text-sm text-slate-400">
    <time datetime="<%= date_xml(post.date) %>"><%= date(post.date) %></time>
    <% if (post.categories && post.categories.length){ %>
      · <%= post.categories.map(function(cat){ return cat.name; }).join(', ') %>
    <% } %>
  </p>
  <% if (post.excerpt){ %>
    <div class="text-slate-300 prose prose-invert prose-sm max-w-none"><%- post.excerpt %></div>
  <% } %>
  <div class="flex items-center justify-between pt-1">
    <div class="flex items-center gap-2 text-xs text-slate-400 uppercase tracking-wide">
      <% if (post.tags && post.tags.length){ %>
        <% post.tags.forEach(function(tag){ %>
          <span class="px-2 py-1 rounded-full bg-slate-800 border border-slate-700"><%= tag.name %></span>
        <% }) %>
      <% } %>
    </div>
    <a class="text-cyan-300 text-sm font-semibold hover:text-cyan-200" href="<%- url_for(post.path) %>">閱讀更多 →</a>
  </div>
</article>
