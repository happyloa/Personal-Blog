<section class="bg-gradient-to-b from-slate-950 via-slate-950 to-slate-900 pb-16">
  <div class="max-w-5xl mx-auto px-6 pt-16 pb-10 flex flex-col gap-6">
    <p class="text-sm uppercase tracking-[0.3em] text-cyan-300">Modern Dark</p>
    <h1 class="text-4xl md:text-5xl font-bold text-slate-50 leading-tight"><%= theme.hero && theme.hero.title ? theme.hero.title : config.title %></h1>
    <p class="text-lg text-slate-300 max-w-3xl"><%= theme.hero && theme.hero.subtitle ? theme.hero.subtitle : config.subtitle %></p>
  </div>
  <div class="max-w-5xl mx-auto px-6 grid md:grid-cols-2 gap-6">
    <% (page.posts || posts).each(function(post){ %>
      <%- partial('partials/post-card', {post: post}) %>
    <% }) %>
  </div>
  <% if (page.total > 1) { %>
    <div class="max-w-5xl mx-auto px-6 mt-10 flex items-center justify-between text-sm text-slate-300">
      <% if (page.prev) { %>
        <a class="px-4 py-2 rounded-lg bg-slate-900/70 border border-slate-800 hover:border-cyan-500 transition" href="<%- url_for(page.prev_link) %>">← 新文章</a>
      <% } else { %>
        <span></span>
      <% } %>
      <% if (page.next) { %>
        <a class="px-4 py-2 rounded-lg bg-slate-900/70 border border-slate-800 hover:border-cyan-500 transition" href="<%- url_for(page.next_link) %>">舊文章 →</a>
      <% } %>
    </div>
  <% } %>
</section>
