<section class="bg-slate-950 pb-16">
  <div class="max-w-5xl mx-auto px-6 pt-14">
    <div class="flex items-center justify-between mb-8">
      <h1 class="text-3xl font-bold text-slate-50"><%= page.tag || __('tag') %></h1>
      <p class="text-slate-400 text-sm"><%= __('tags') %></p>
    </div>
    <div class="grid md:grid-cols-2 gap-6">
      <% (page.posts || posts).each(function(post){ %>
        <%- partial('partials/post-card', {post: post}) %>
      <% }) %>
    </div>
    <% if (page.total > 1) { %>
      <div class="mt-10 flex items-center justify-between text-sm text-slate-300">
        <% if (page.prev) { %>
          <a class="px-4 py-2 rounded-lg bg-slate-900/70 border border-slate-800 hover:border-cyan-500 transition" href="<%- url_for(page.prev_link) %>">← 新文章</a>
        <% } else { %>
          <span></span>
        <% } %>
        <% if (page.next) { %>
          <a class="px-4 py-2 rounded-lg bg-slate-900/70 border border-slate-800 hover:border-cyan-500 transition" href="<%- url_for(page.next_link) %>">舊文章 →</a>
        <% } %>
      </div>
    <% } %>
  </div>
</section>
