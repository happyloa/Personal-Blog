<section class="bg-slate-950 pb-16">
  <div class="max-w-5xl mx-auto px-6 pt-14">
    <div class="flex items-center justify-between mb-8">
      <h1 class="text-3xl font-bold text-slate-50"><%= page.tag || __('tag') %></h1>
      <p class="text-slate-400 text-sm"><%= __('tags') %></p>
    </div>
    <div class="grid md:grid-cols-2 gap-6">
      <% (page.posts || posts).each(function(post){ %>
        <%- partial('partials/post-card', {post: post}) %>
      <% }) %>
    </div>
  </div>
</section>
